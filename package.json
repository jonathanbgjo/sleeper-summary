{
  "name": "sleeper-weekly",
  "version": "1.0.0",
  "type": "module",
  "description": "Weekly Sleeper league report for supDawg",
  "scripts": {
    "report": "node src/index.js",
    "report:week": "node src/index.js --week",
    "env:check": "node -e \"console.log('cwd:', process.cwd()); console.log('ENV URL:', process.env.DISCORD_WEBHOOK_URL)\"",
    "env:check:dotenv": "node -r dotenv/config -e \"console.log('ENV URL:', process.env.DISCORD_WEBHOOK_URL)\"",
    "ping:discord": "node scripts/ping-discord.js",
    "start": "node src/server.js",
    "dev": "vercel dev"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "openai": "^6.3.0"
  }
}
